{
    "manifest_version": 3,
    "name": "Echo - Multi-Platform Ghost Writer",
    "version": "1.2.0",
    "description": "Your voice, echoed. AI-powered LinkedIn & Reddit comment assistant with vision support and autonomous verification.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "alarms",
        "tabs"
    ],
    "host_permissions": [
        "*://www.linkedin.com/*",
        "*://*.reddit.com/*",
        "*://api.openai.com/*",
        "*://generativelanguage.googleapis.com/*",
        "*://api.deepseek.com/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.linkedin.com/*"
            ],
            "js": [
                "lib/html2canvas.min.js",
                "content/platform_router.js",
                "content/reddit_logic.js",
                "content/driver.js",
                "content/content.js"
            ],
            "css": [
                "content/content.css"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "*://*.reddit.com/*"
            ],
            "js": [
                "lib/html2canvas.min.js",
                "content/platform_router.js",
                "content/reddit_logic.js",
                "content/driver.js",
                "content/content.js"
            ],
            "css": [
                "content/content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "dashboard/dashboard.html",
                "dashboard/dashboard.css",
                "dashboard/dashboard.js",
                "lib/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}